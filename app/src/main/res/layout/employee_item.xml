<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg"
    android:padding="16dp">

    <!-- Employee ID TextView -->

    <TextView
        android:id="@+id/idemploye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee ID"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/indicationNom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Full Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBottom_toTopOf="@+id/nom"
        app:layout_constraintEnd_toStartOf="@+id/date"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="#000009"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/idemploye"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Employee Service TextView -->

    <TextView
        android:id="@+id/nom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#000009"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicationNom"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_min="0dp" />

    <TextView
        android:id="@+id/prenom"
        android:layout_width="52dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="12dp"
        android:text="Empl"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000009"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/nom"
        app:layout_constraintTop_toBottomOf="@+id/indicationNom"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_min="0dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/date"
        android:layout_width="102dp"
        android:layout_height="20dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="52dp"
        android:fontFamily="cursive"
        android:text="Date of Birth"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000009"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/dateDeNaissance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateDeNaissance"
        android:layout_width="86dp"
        android:layout_height="24dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:text="Date "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000009"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/indicationService"
        android:layout_width="85dp"
        android:layout_height="22dp"
        android:fontFamily="cursive"
        android:text="Service"
        android:textColor="#000009"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.721"
        app:layout_constraintStart_toEndOf="@+id/date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/service"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:text="serv"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000009"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toEndOf="@+id/dateDeNaissance"
        app:layout_constraintTop_toBottomOf="@+id/indicationService"
        app:layout_constraintWidth_default="wrap"
        app:layout_constraintWidth_min="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
